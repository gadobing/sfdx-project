<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CCI_FirstName_Required</fullName>
    <active>true</active>
    <description>First Name is required for prospective members</description>
    <errorConditionFormula>If(AND(RecordType.Name=&quot;Prospective Member&quot;,OR(ISBLANK(FirstName), ISNULL(FirstName) )),true,false)</errorConditionFormula>
    <errorDisplayField>FirstName</errorDisplayField>
    <errorMessage>Complete this field.</errorMessage>
</ValidationRule>
